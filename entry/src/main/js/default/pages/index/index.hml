<div class="container">
    <div class="header">
        <div class="score">
            <text>
                SCORE
            </text>
            <text style="font-size: 24px;">
                {{ currentScore }}
            </text>
        </div>
        <div class="score">
            <text>
                BEST
            </text>
            <text style="font-size: 24px;">
                {{ bestScore }}
            </text>
        </div>
    </div>
    <stack class="content">
        <canvas class="content" id="canvas" onswipe="swipeGrids"></canvas>
        <div show="{{ isEnd }}">
            <text>
                GAME OVER
            </text>
        </div>
    </stack>
    <div class="footer">
        <button onclick="checkRestart">
            RESTART
        </button>
    </div>
</div>
